@model IEnumerable<YemekTarifleri.DTOs.RecipeDto>

@{
    ViewData["Title"] = "Tarifler";
}

<div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-800 mb-2">Yemek Tarifleri</h1>
    <p class="text-gray-600">Lezzetli tarifler ke≈üfedin ve payla≈üƒ±n</p>
</div>

<!-- Filtreleme B√∂l√ºm√º -->
<div class="bg-white rounded-lg shadow-sm p-6 mb-8">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Filtrele</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Kategori</label>
            <select id="filterKategori" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500">
                <option value="">T√ºm√º</option>
                @foreach (var kategori in (ViewBag.Kategoriler as IEnumerable<string> ?? Enumerable.Empty<string>()))
                {
                    <option value="@kategori" selected="@(ViewBag.SeciliKategori == kategori)">@kategori</option>
                }
            </select>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Malzeme</label>
            <input type="text" id="filterMalzeme" placeholder="Malzeme ara..." 
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500">
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Max. Hazƒ±rlama S√ºresi (dk)</label>
            <input type="number" id="filterSure" placeholder="Dakika" min="1"
                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500">
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Zorluk Seviyesi</label>
            <select id="filterZorluk" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500">
                <option value="">T√ºm√º</option>
                <option value="Kolay">Kolay</option>
                <option value="Orta">Orta</option>
                <option value="Zor">Zor</option>
            </select>
        </div>
    </div>
</div>

<!-- Tarif Kartlarƒ± -->
<div id="recipeContainer" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var item in Model)
    {
        <div class="recipe-card bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden group cursor-pointer" 
             data-kategori="@item.Kategori" 
             data-malzemeler="@item.Malzemeler?.ToLower()"
             data-sure="@item.HazirlamaSuresi"
             data-zorluk="@item.ZorlukSeviyesi">
            <!-- G√∂rsel -->
            <div class="h-48 bg-gradient-to-br from-emerald-100 to-orange-100 overflow-hidden">
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    <img src="@item.ImagePath" alt="@item.Ad" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300">
                }
                else
                {
                    <div class="w-full h-full flex items-center justify-center text-6xl">üç≥</div>
                }
            </div>
            
            <!-- ƒ∞√ßerik -->
            <div class="p-6">
                <div class="flex items-start justify-between mb-3">
                    <h3 class="text-xl font-bold text-gray-800 group-hover:text-emerald-600 transition-colors">@item.Ad</h3>
                    @if (!string.IsNullOrEmpty(item.ZorlukSeviyesi))
                    {
                        var badgeColor = item.ZorlukSeviyesi switch
                        {
                            "Kolay" => "bg-emerald-100 text-emerald-700",
                            "Orta" => "bg-orange-100 text-orange-700",
                            "Zor" => "bg-red-100 text-red-700",
                            _ => "bg-gray-100 text-gray-700"
                        };
                        <span class="px-3 py-1 rounded-full text-xs font-semibold @badgeColor">
                            @item.ZorlukSeviyesi
                        </span>
                    }
                </div>
                
                <div class="flex items-center gap-4 text-sm text-gray-600 mb-4">
                    @if (item.HazirlamaSuresi.HasValue)
                    {
                        <span class="flex items-center gap-1">
                            <span>‚è±Ô∏è</span>
                            <span>@item.HazirlamaSuresi dk</span>
                        </span>
                    }
                    @if (!string.IsNullOrEmpty(item.Kategori))
                    {
                        <span class="flex items-center gap-1">
                            <span>üìÅ</span>
                            <span>@item.Kategori</span>
                        </span>
                    }
                </div>
                
                @if (!string.IsNullOrEmpty(item.Aciklama))
                {
                    <p class="text-gray-600 text-sm mb-4 line-clamp-2">@item.Aciklama</p>
                }
                
                <div class="flex gap-2">
                    <a asp-action="Details" asp-route-id="@item.Id" 
                       class="flex-1 bg-emerald-600 hover:bg-emerald-700 text-white text-center px-4 py-2 rounded-lg transition-colors font-medium">
                        Detay
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-12">
        <div class="text-6xl mb-4">üçΩÔ∏è</div>
        <h3 class="text-2xl font-semibold text-gray-700 mb-2">Hen√ºz tarif yok</h3>
        <p class="text-gray-500 mb-6">ƒ∞lk tarifinizi ekleyerek ba≈ülayƒ±n!</p>
        <a asp-action="Create" class="inline-block bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 rounded-lg transition-colors font-medium">
            + Tarif Ekle
        </a>
    </div>
}

@section Scripts {
    <script>
        // Live filtering
        $(document).ready(function() {
            function filterRecipes() {
                const kategori = $('#filterKategori').val().toLowerCase();
                const malzeme = $('#filterMalzeme').val().toLowerCase();
                const sure = $('#filterSure').val();
                const zorluk = $('#filterZorluk').val();
                
                $('.recipe-card').each(function() {
                    const $card = $(this);
                    const cardKategori = ($card.data('kategori') || '').toLowerCase();
                    const cardMalzemeler = ($card.data('malzemeler') || '');
                    const cardSure = $card.data('sure');
                    const cardZorluk = $card.data('zorluk');
                    
                    let show = true;
                    
                    if (kategori && cardKategori !== kategori) show = false;
                    if (malzeme && !cardMalzemeler.includes(malzeme)) show = false;
                    if (sure && (cardSure === null || cardSure > parseInt(sure))) show = false;
                    if (zorluk && cardZorluk !== zorluk) show = false;
                    
                    $card.toggle(show);
                });
            }
            
            $('#filterKategori, #filterMalzeme, #filterSure, #filterZorluk').on('input change', filterRecipes);
        });
    </script>
}
